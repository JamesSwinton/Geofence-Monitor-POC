<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.MonitorGeofencePOC" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
    <!-- Primary brand color. -->
    <item name="colorPrimary">#E72621</item>
    <item name="colorPrimaryVariant">#690000</item>
    <item name="colorOnPrimary">#FFFFFF</item>

    <!-- Secondary brand color. -->
    <item name="colorSecondary">#F4CB1C</item>
    <item name="colorSecondaryVariant">#A58912</item>
    <item name="colorOnSecondary">#FFFFFF</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
  </style>

  <style name="Theme.AppCompat.Translucent" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowAnimationStyle">@android:style/Animation</item>
  </style>
</resources>